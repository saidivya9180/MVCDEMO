
@{
    ViewBag.Title = "EditInv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html class="no-js" lang="en">
<head>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">*@
    <link rel="stylesheet" href="~/css/StyleSheet1.css">
    <title>The cliamte Regisrty</title>
   
</head>
<body>
    <h1> Edit My Inventory Details</h1>
    <br/>
    <form action="/test/editinv" method="post">
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPassword" name="EntityId" value="@ViewBag.InvDtls.EntityId">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">EnityName</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPassword" name="EntityName" value="@ViewBag.InvDtls.EntityName">
            </div>
        </div>

        <div class="form-group row">
            <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Emission Year</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPassword" name="EmissionYear" value="@ViewBag.InvDtls.EmissionYear">
            </div>

        </div>
      
       
        <div class="form-group row">
            <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Dropdown</label>

            <div class="col-sm-10">
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>

        </div>
       
        <div class="form-group row">
            <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Radio check Boxes</label>

            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label" for="exampleRadios1">
                        Default radio
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                    <label class="form-check-label" for="exampleRadios2">
                        Second default radio
                    </label>
                </div>
                <div class="form-check ">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
                    <label class="form-check-label" for="exampleRadios3">Disabled radio</label>
                </div>
            
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">File Upload</label>
            <div class="col-sm-10">
                <input type="file" class="form-control-file" id="exampleFormControlFile1">

            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Multiple Selection</label>
            <div class="col-sm-10">
                <select multiple class="form-control" id="exampleFormControlSelect2">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>

            </div>
        </div>
        <div class="form-group row">
            <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Textarea</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>

            </div>
        </div>

       

        <input type="submit" class="btn" style="background-color:#fff" value="Save" />
        <input type="button" class="btn" style="background-color:#fff" value="Cancel" />


    </form>
   
</body>

</html>

